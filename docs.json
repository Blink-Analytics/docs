{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Serin Docs",
  "colors": {
    "primary": "#355CC3",
    "light": "#355CC3",
    "dark": "#355CC3"
  },
  "favicon": "/images/Serin_Logo.png",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "icon": "book-open-cover",
          "href": "https://mintlify.com/docs"
        },
        {
          "anchor": "Blog",
          "icon": "newspaper",
          "href": "https://mintlify.com/blog"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/images/Serin_Logo_TR_Black_v0.2_1040x520.png",
    "dark": "/images/Serin Logo_TR_White.png",
    "href": "https://www.serin-ai.com/"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "background": {
    "decoration": "gradient"
  },
  "appearance": {
    "default": "dark"
  },
  "fonts": {
    "family": "Geist",
    "weight": 300,
    "format": "woff",
    "heading": {
      "family": "Playfair Display",
      "weight": 400
    },
    "body": {
      "family": "Geist",
      "weight": 300
    }
  },
  "thumbnails": {
    "appearance": "dark",
    "background": "/images/Serin_Banner.png",
    "fonts": {
      "family": "Playfair Display"
    }
  },
  "styling": {
    "eyebrows": "breadcrumbs"
  },
  "icons": {
    "library": "lucide"
  },
  "description": "Documentation for Serin, the future of Hiring"
}
